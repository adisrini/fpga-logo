`timescale 1 ns / 100 ps
module bypass_wb_tb();
	reg [4:0] opcode_WB, opcode_Mem;
	reg [4:0] rd_WB, rd_Mem;

	wire bypass_mem;

	bypass_mem bm(opcode_Mem, opcode_WB, rd_Mem, rd_WB, bypass_mem);

	initial
		begin
		$display($time, "<<Starting the simulation>> ");
		always
			if(bypass_mem === 1'b1) begin
				$display("Values of opcode_WB %b, opcode_Mem %b, rd_WB %b, rd_Mem %b, and bypass_Mem %b",opcode_WB, opcode_Mem, rd_WB, rd_Mem, bypass_mem);
			end
		opcode_WB = 5'b00000;
		opcode_Mem = 5'b00000;
		rd_WB = 5'b00000;
		rd_Mem = 5'b00000;
		#1100000
		$stop;
		end
	always
		#20 opcode_WB = opcode_WB + 1;
	always
		#40 opcode_Mem = opcode_Mem + 1;
	always
		#80 rd_Mem = rd_Mem + 1;
	always
		#160 rd_WB = rd_WB + 1;
endmodule
